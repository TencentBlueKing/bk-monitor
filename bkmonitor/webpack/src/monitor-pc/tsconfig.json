{
  "include": ["./**/*.ts", "./**/*.vue", "./**/*.tsx", "./**/.js"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "sourceMap": true,
    "pretty": true,
    "jsx": "preserve",
    "jsxFactory": "VueTsxSupport",
    "lib": ["es2018", "dom"],
    "removeComments": false,
    "outDir": "./dist",
    "paths": {
      "@/*": ["./*"],
      "@router/*": ["./router/*"],
      "@store/*": ["./store/*"],
      "@page/*": ["./page/*"],
      "@static/*": ["./static/*"]
    }
  }
}
