{
    "tasks": [
        {
            "id": "mcp-e2e-analyze",
            "name": "MCP E2E 组件分析",
            "description": "当 Vue/TSX 组件变更时自动分析依赖关系",
            "trigger": "on_change",
            "files": [
                "src/views/**/*.{tsx,vue}",
                "src/components/**/*.{tsx,vue}",
                "src/global/**/*.{tsx,vue}"
            ],
            "command": "npm run test:analyze",
            "enabled": false,
            "debounce": 2000,
            "conditions": [
                {
                    "type": "file_exists",
                    "value": ".mcp/servers.json"
                }
            ]
        },
        {
            "id": "mcp-e2e-generate",
            "name": "MCP E2E 生成测试",
            "description": "分析完成后自动生成测试流程",
            "trigger": "on_change",
            "files": [
                ".mcp/analysis.json"
            ],
            "command": "npm run test:generate",
            "enabled": false
        },
        {
            "id": "mcp-e2e-run-manual",
            "name": "MCP E2E 手动执行",
            "description": "手动执行所有 E2E 测试",
            "trigger": "manual",
            "files": [],
            "command": "npm run test:run",
            "enabled": true
        },
        {
            "id": "mcp-e2e-full-workflow",
            "name": "MCP E2E 完整流程",
            "description": "执行完整的测试工作流（分析→生成→执行）",
            "trigger": "manual",
            "files": [],
            "command": "npm run test:e2e",
            "enabled": true
        }
    ],
    "metadata": {
        "project": "blueking-log",
        "framework": "vue2",
        "createdAt": "2025-12-17",
        "updatedAt": "2025-12-17"
    }
}